@model MainEnterpriseProject.Models.Domain.Tbl_Flower
@{
    ViewBag.Title = "Floriset_EditFlower";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="container">
            <div class="col-md-4">
                <div class="form-group">
                    <div class="col-md-11">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-image"></i>
                            </span>
                            <button class="btn btn-success form-control1" style="border: 1px solid #ccc;" onclick="document.getElementById('file').click(); return false;">انتخاب عکس</button>
                            <input required oninvalid="setCustomValidity('عکس پروفایلتان را انتخاب نمایید')" oninput="setCustomValidity('')" type="file" class="form-control1" id="file" name="file" style="direction:rtl; color:transparent; display:none;">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <div class="col-md-11">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-mail-forward"></i>
                            </span>
                            <input required oninvalid="setCustomValidity('قیمت  را وارد نمایید')" oninput="setCustomValidity('')" type="text" class="form-control1" value="@Model.FlwPrice" id="FlwPrice" name="FlwPrice" placeholder="قیمت " style="direction:rtl;" autocomplete="off">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <div class="col-md-11">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-check"></i>
                            </span>
                            <input required oninvalid="setCustomValidity('نام گل را وارد نمایید')" oninput="setCustomValidity('')" type="text" class="form-control1"  value="@Model.FlwName" id="FlwName" name="FlwName" placeholder=" نام گل " style="direction:rtl;" autocomplete="off">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="container">
            <div class="col-md-4">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-11">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-list"></i>
                                </span>
                                <select id="FlwType" name="FlwType" required oninvalid="setCustomValidity('نوع گل را انتخاب نمایید')" oninput="setCustomValidity('')" class="form-control1" style="direction:rtl;">
                                    <option>@Model.FlwType</option>
                                    <option>نوع گل</option>
                                    <option>درختچه</option>
                                    <option>شاخه گل</option>
                                    <option>گلدانی</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-11">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-save"></i>
                                </span>
                                <input required type="submit" name="SaveChange" id="SaveChange" class="form-control1" value="ذخیره" style="direction:rtl; background-color:lightcyan">
                                <span class="input-group-addon">
                                    <i class="fa fa-save"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <div class="col-md-11">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </span>
                            <textarea id="FlwMaintenance" name="FlwMaintenance" rows="5" cols="77" placeholder="طرز نگهداری گل را وارد نمایید" class="uikit ng-pristine ng-valid ng-empty ng-touched" style="direction:rtl; margin-bottom: -6px;">@Model.FlwMaintenance</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





</form>

