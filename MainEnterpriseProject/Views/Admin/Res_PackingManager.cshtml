@model List<MainEnterpriseProject.Models.Domain.Tbl_Packing>
 @{
     ViewBag.Title = "AddPackingManager";
     Layout = "~/Views/Shared/_Admin.cshtml";
     int counter = 1;
     MainEnterpriseProject.Models.Repository.FoodRepository rep_food = new MainEnterpriseProject.Models.Repository.FoodRepository();
}

<link href="~/Content/css/manager-icon-button.css" rel="stylesheet" />
<link href="~/Content/css/popup_style.css" rel="stylesheet" />
<style>
    .lr-sticky-header {
        color: white;
        background: lightblue;
        transition: all 0.6s;
    }

    #scrollPanel {
        height: 500px;
        overflow-y: auto;
    }

    .table > thead > tr > th {
        text-align: center;
    }

    .table > tbody > tr > td {
        text-align: center;
        vertical-align: middle;
    }
</style>


<div class="container">
    <div class="row">
        <div style="width:95%; direction:rtl;">
            <table class="table table-bordered">
                <thead style="z-index: 1;">
                    <tr>
                        <th class="headerSort headerSortDown" tabindex="0" role="columnheader button" title="Sort descending">
                            شماره
                        </th>
                        <th width="190" class="headerSort" tabindex="0" role="columnheader button" title="Sort ascending">نام بسته بندی</th>
                        <th width="160" class="headerSort" tabindex="0" role="columnheader button" title="Sort ascending">نام غذا</th>
                        <th width="320" class="headerSort" tabindex="0" role="columnheader button" title="Sort ascending">عکس</th>
                        <th class="" title=""></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td><span style="font-family: monospace, monospace;">@counter</span></td>
                    <td>@item.packingDescription</td>
                    <td>@rep_food.GetSingleFoodName(item.foodID).name</td>
                    <td>
                        <span class="nowrap">
                            <img width="100" height="100" src="~/Content/images/@item.packingImage" alt="Alternate Text" />
                        </span>
                    </td>
                    <td>
                        <div class="col-md-4">

                        </div>
                        <div class="col-md-2">
                            <div class="social_lock">
                                <div class="social_case3"></div>
                                <div class="mk">
                                    <a href="~/Admin/Res_EditPacking/@item.ID">
                                        <i class="fa fa-edit vmk1 vm" title="ویرایش"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="social_lock">
                                <div class="social_case3"></div>
                                <div class="mk">
                                    <a href="~/Admin/Res_DeletePacking/@item.ID">
                                        <i class="fa fa-remove vmk1 vm" title="حذف"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">

                        </div>
                    </td>
                </tr>
                    }
                </tbody>
                <tfoot></tfoot>
            </table>
        </div>
    </div>
</div>


<script src="~/Scripts/lrStickyHeader.js"></script>
<script>
    var tables = document.getElementsByTagName('table');
    lrStickyHeader(tables[0]);
    lrStickyHeader(tables[1]);
    lrStickyHeader(tables[2], { parent: document.getElementById('scrollPanel') });
</script>

