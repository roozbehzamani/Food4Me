@model MainEnterpriseProject.Models.Domain.Tbl_Restaurant
@{
    ViewBag.Title = "resRegister";
    Layout = "~/Views/Shared/_index.cshtml";
}



<link href="~/Content/UserContent/css/fontawesome-all.css" rel="stylesheet" />

<div style="background:#f6f6f6;">
    <div class="col-lg-10" style="text-align:  center;margin-top:23px;margin-right:127px;">

    </div>
    <form method="post" enctype="multipart/form-data" name="" class="ng-pristine ng-valid ng-valid-email" style="margin-bottom:15px;">
        <div class="col-md-2"></div>

        <div class="col-md-4" style="margin-left:10px; border:3px solid #c39a58d9; border-radius:10px;height:400px; margin-top:70px;margin-bottom:30px;background:white;">

            <div class="static-content-box contact-form ng-scope">
                <div class="signuplogo" style="text-align:-webkit-center;">
                    <img src="~/Content/UserContent/images/chef.png" class="img-responsive img-circle" width="100" height="100" style="margin-top: 10px;">
                    <p style="text-align:  center;font-size:15px;font-weight:  bold;margin-top: 10px;">ثبت نام رستوران </p>
                </div>





                <div style="border:2px solid #d3d2d2; border-radius:4px; display:inline;position:absolute; padding-left:10px; padding-right:10px;">
                    <i class="fas fa-utensils" style="width:  30px; height: 30px;text-align:  center;padding-top: 6px;"></i>
                </div>
                <div style="display:inline;">
                    <div class="form-group inner-addon right-inner-addon">

                        <input name="resName" id="resName" style="padding-right:60px;" type="text" placeholder="نام رستوران" class="form-control default-input singleline-input ng-pristine ng-valid ng-empty ng-touched">
                    </div>
                </div>



                <div style="border:2px solid #d3d2d2; border-radius:4px; display:inline;position:absolute; padding-left:10px; padding-right:10px;">
                    <i class="fas fa-map-marker-alt" style="width:  30px;height: 30px;text-align:  center;padding-top: 6px;"></i>
                </div>
                <div style="display:inline;">

                    <div class="form-group inner-addon right-inner-addon">

                        <input name="resAddress" id="resAddress" style="padding-right:60px;" type="text" placeholder="آدرس رستوران" class="form-control default-input singleline-input ng-pristine ng-untouched ng-valid ng-empty ng-valid-email" name="mail">

                    </div>

                </div>



                <div style="border:2px solid #d3d2d2; border-radius:4px; display:inline;position:absolute; padding-left:10px; padding-right:10px;">
                    <i class="fas fa-phone" style="width:  30px;height: 30px;text-align:  center;padding-top: 6px;"></i>
                </div>
                <div style="display:inline;">

                    <div class="form-group inner-addon right-inner-addon">

                        <input name="resPhone" id="resPhone" style="padding-right:60px;" type="text" placeholder="تلفن" class="form-control default-input singleline-input ng-pristine ng-untouched ng-valid ng-empty"><span class="form-icon icon icon-avatar"></span>
                    </div>

                </div>

                <div style="border:2px solid #d3d2d2; border-radius:4px; display:inline;position:absolute; padding-left:10px; padding-right:10px;">
                    <i class="fas fa-list-ul" style="width:  30px;height: 30px;text-align:  center;padding-top: 6px;"></i>
                </div>
                <div class="form-group inner-addon right-inner-addon">
                    <select id="resType" name="resType" class="form-control1" style="direction:rtl;border-radius:4px;border: 2px solid #cccccca6;height:35px;line-height: 1.42857143; color:black;padding-right:55px;  font-size:14px;">
                        <option value="volvo">نوع رستوران</option>
                        <option value="saab">رستوران</option>
                        <option value="opel">فست فود</option>
                        <option value="audi">کافی شاپ</option>
                    </select>
                </div>

                <div class="form-group inner-addon right-inner-addon">
                    <button class="btn btn-success form-control1" style="margin-top:0px;direction:rtl;border-radius:4px;border: 2px solid #cccccca6;height:35px;line-height: 1.42857143;font-size:1em;" onclick="document.getElementById('file').click(); return false;">انتخاب عکس</button>
                    <input type="file" class="form-control1" id="file" name="file" style="direction:rtl; color:transparent; display:none;border-radius:4px;border: 1.4px solid #ccc;height:35px;line-height: 1.42857143;font-size:14px;">

                </div>





            </div>

        </div>


        <div class="col-md-4" style="margin-left:10px; border:3px solid #c39a58d9; border-radius:10px; height:400px; margin-top:70px;margin-bottom:30px;background:white;">

            <div class="static-content-box contact-form ng-scope" style="margin-top:10%;">


                    <div style="border:2px solid #d3d2d2; border-radius:4px; display:inline;position:absolute; padding-left:10px; padding-right:10px;">
                        <i class="fas fa-user" style="width:  30px; height: 30px;text-align:  center;padding-top: 6px;"></i>
                    </div>
                    <div style="display:inline;">
                        <div class="form-group inner-addon right-inner-addon">

                            <input name="name" id="name" style="padding-right:60px;" type="text" placeholder="نام مالک" class="form-control default-input singleline-input ng-pristine ng-valid ng-empty ng-touched">
                        </div>
                    </div>



                    <div style="border:2px solid #d3d2d2; border-radius:4px; display:inline;position:absolute; padding-left:10px; padding-right:10px;">
                        <i class="fas fa-envelope" style="width:  30px;height: 30px;text-align:  center;padding-top: 6px;"></i>
                    </div>
                    <div style="display:inline;">

                        <div class="form-group inner-addon right-inner-addon">

                            <input name="email" id="email" style="padding-right:60px;" type="email" placeholder="ایمیل" class="form-control default-input singleline-input ng-pristine ng-untouched ng-valid ng-empty ng-valid-email">

                        </div>

                    </div>



                    <div style="border:2px solid #d3d2d2; border-radius:4px; display:inline;position:absolute; padding-left:10px; padding-right:10px;">
                        <i class="fas fa-phone" style="width:  30px;height: 30px;text-align:  center;padding-top: 6px;"></i>
                    </div>
                    <div style="display:inline;">

                        <div class="form-group inner-addon right-inner-addon">

                            <input name="mob_phone" id="mob_phone" style="padding-right:60px;" type="text" placeholder="شماره مالک" class="form-control default-input singleline-input ng-pristine ng-untouched ng-valid ng-empty"><span class="form-icon icon icon-avatar"></span>
                        </div>

                    </div>

                    <div style="border:2px solid #d3d2d2; border-radius:4px; display:inline;position:absolute;font-size:1.5em; padding-left:10px; padding-right:10px;">
                        <i class="far fa-id-card" style="width:  30px;height: 30px;text-align:  center;padding-top: 6px;"></i>
                    </div>
                    <div style="display:inline;">

                        <div class="form-group inner-addon right-inner-addon">

                            <input name="ncode" id="ncode" style="padding-right:60px;" type="text" placeholder="کدملی" class="form-control default-input singleline-input ng-pristine ng-untouched ng-valid ng-empty"><span class="form-icon icon icon-avatar"></span>
                        </div>

                    </div>

                    <div class="form-group inner-addon right-inner-addon">
                        <button class="btn btn-success form-control1" style="margin-top:0px;direction:rtl;border-radius:4px;border: 2px solid #cccccca6;height:35px;line-height: 1.42857143;font-size:1em;" onclick="document.getElementById('file2').click(); return false;">انتخاب عکس</button>
                        <input type="file" class="form-control1" id="file2" name="file2" style="direction:rtl; color:transparent; display:none;border-radius:4px;border: 1.4px solid #ccc;height:35px;line-height: 1.42857143;font-size:14px;">

                    </div>

                    <div style=" position: absolute;width: 100%;bottom: 30px; right:0px;text-align:center;">

                        <input class="btn btn-blue btn-default-xs" style="color:#fff !important; width:50%; background:#c39a58d4;" type="submit" name="SaveChange" id="SaveChange" value="ذخیره" />

                    </div>
            </div>

        </div>
        <div class="col-md-2"></div>

    </form>

    <div class="clearfix"> </div>



</div>

<div class="clearfix"> </div>

